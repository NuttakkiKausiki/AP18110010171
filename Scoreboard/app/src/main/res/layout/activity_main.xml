<?xml version="1.0" encoding="UTF-8"?>

    <LinearLayout tools:context=".MainActivity" android:orientation="vertical" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout android:orientation="horizontal" android:layout_height="wrap_content" android:layout_width="match_parent">


    <LinearLayout android:orientation="vertical" android:layout_height="wrap_content" android:layout_width="match_parent" android:padding="15dp" android:gravity="center_horizontal" android:layout_weight="1" android:layout_marginRight="1dp">

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="22sp" android:textColor="#000" android:textStyle="bold" android:text="TEAM A" android:fontFamily="sans-serif"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="56sp" android:textColor="#000" android:text="0" android:fontFamily="sans-serif" android:layout_marginTop="25dp" android:id="@+id/team_a_score"/>

    <Button android:layout_height="wrap_content" android:layout_width="match_parent" android:textSize="15sp" android:textColor="#fff" android:text="+1 POINT" android:layout_marginTop="25dp" android:id="@+id/a_1_score" android:onClick="a1score" android:background="#2196F3"/>

    <Button android:layout_height="wrap_content" android:layout_width="match_parent" android:textSize="15sp" android:textColor="#fff" android:text="+2 POINT" android:layout_marginTop="10dp" android:id="@+id/a_2_score" android:onClick="a2score" android:background="#2196F3" android:paddingRight="15dp" android:paddingLeft="15dp"/>

    <Button android:layout_height="wrap_content" android:layout_width="match_parent" android:textSize="15sp" android:textColor="#fff" android:text="+3 POINT" android:layout_marginTop="10dp" android:id="@+id/a_3_score" android:onClick="a3score" android:background="#2196F3" android:paddingRight="15dp" android:paddingLeft="15dp"/>

</LinearLayout>


    <LinearLayout android:orientation="vertical" android:layout_height="wrap_content" android:layout_width="match_parent" android:padding="15dp" android:gravity="center_horizontal" android:layout_weight="1" android:layout_marginRight="1dp">

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="22sp" android:textColor="#000" android:textStyle="bold" android:text="TEAM B" android:fontFamily="sans-serif"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="56sp" android:textColor="#000" android:text="0" android:fontFamily="sans-serif" android:layout_marginTop="25dp" android:id="@+id/team_b_score"/>

    <Button android:layout_height="wrap_content" android:layout_width="match_parent" android:textSize="15sp" android:textColor="#fff" android:text="+1 POINT" android:layout_marginTop="25dp" android:id="@+id/b_1_score" android:onClick="b1score" android:background="#2196F3"/>

    <Button android:layout_height="wrap_content" android:layout_width="match_parent" android:textSize="15sp" android:textColor="#fff" android:text="+2 POINT" android:layout_marginTop="10dp" android:id="@+id/b_2_score" android:onClick="b2score" android:background="#2196F3" android:paddingRight="15dp" android:paddingLeft="15dp"/>

    <Button android:layout_height="wrap_content" android:layout_width="match_parent" android:textSize="15sp" android:textColor="#fff" android:text="+3 POINT" android:layout_marginTop="10dp" android:id="@+id/b_3_score" android:onClick="b3score" android:background="#2196F3" android:paddingRight="15dp" android:paddingLeft="15dp"/>

</LinearLayout>

</LinearLayout>


    <LinearLayout android:orientation="vertical" android:layout_height="match_parent" android:layout_width="match_parent" android:gravity="center" android:layout_gravity="center">

    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="15sp" android:text="RESET" android:id="@+id/reset" android:onClick="reset" android:paddingRight="40dp" android:paddingLeft="40dp" android:layout_marginBottom="15dp"/>

</LinearLayout>

</LinearLayout>